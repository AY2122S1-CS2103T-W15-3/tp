<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<HBox fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
            </HBox>
            <Label fx:id="from" wrapText="false" managed="false" styleClass="cell_small_label" text="\$from" />
            <!-- Optional fields-->
            <Label fx:id="to" wrapText="false" managed="false" styleClass="cell_small_label" text="\$to" />
            <Label fx:id="address" wrapText="false" managed="false" styleClass="cell_small_label" text="\$address" />
            <Label fx:id="zoomLink" wrapText="false" managed="false" styleClass="cell_small_label" text="\$meeting-link" />
            <Label fx:id="description" wrapText="false" managed="false" styleClass="cell_small_label" text="\$description" />
            <FlowPane fx:id="tags" managed="false" />
        </VBox>
    </GridPane>
</HBox>
