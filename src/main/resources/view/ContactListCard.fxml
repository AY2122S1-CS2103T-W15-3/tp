<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.image.Image?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <Label fx:id="email" wrapText="false" managed="false" styleClass="cell_small_label" text="\$email" />

      <!-- Optional fields -->
      <!-- phone -->
      <HBox>
        <ImageView fx:id="phoneIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                preserveRatio="true" managed="false" visible="false">
           <Image url="@../images/phone.png" />
        </ImageView>
        <HBox>
          <padding>
            <Insets left="5" />
          </padding>
          <Label fx:id="phone" managed="false" styleClass="cell_small_label" text="\$phone" />
        </HBox>
      </HBox>

      <!-- address -->
      <HBox>
        <ImageView fx:id="addressIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                   preserveRatio="true" managed="false" visible="false">
          <Image url="@../images/address.png" />
        </ImageView>
        <HBox>
          <padding>
            <Insets left="5" />
          </padding>
          <Label fx:id="address" managed="false" styleClass="cell_small_label" text="\$address" />
        </HBox>
      </HBox>

      <!-- telegram handle -->
      <HBox>
        <ImageView fx:id="telegramIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                   preserveRatio="true" managed="false" visible="false">
          <Image url="@../images/telegram.png" />
        </ImageView>
        <HBox>
          <padding>
            <Insets left="5" />
          </padding>
          <Label fx:id="telegramHandle" managed="false" styleClass="cell_small_label" text="\$telegramHandle" />
        </HBox>
      </HBox>

      <!-- zoom -->
      <HBox fx:id="zoom" >
        <padding>
          <Insets top="2" bottom="2" />
        </padding>
        <ImageView fx:id="zoomIcon" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true"
                   preserveRatio="true" >
        </ImageView>
        <HBox>
          <padding>
            <Insets left="5" />
          </padding>
          <Label fx:id="zoomText" styleClass="cell_small_label" text="\$zoom" />
        </HBox>
      </HBox>

      <!-- links -->
      <HBox>
        <padding>
          <Insets top="2" bottom="2" />
        </padding>
        <Label fx:id="linksLabel" styleClass="cell_small_label" text="Linked events: " managed="false" >
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <FlowPane fx:id="links" managed="false" />
      </HBox>

      <!-- tags -->
      <HBox>
        <padding>
          <Insets top="2" bottom="2" />
        </padding>
        <ImageView fx:id="tagIcon" fitHeight="20.0" fitWidth="20.0"
                   preserveRatio="true">
          <Image url="@../images/tag.png" />
        </ImageView>
        <HBox>
          <padding>
            <Insets left="5" />
          </padding>
          <FlowPane fx:id="tags" managed="false" />
        </HBox>
      </HBox>
    </VBox>
  </GridPane>
</HBox>
