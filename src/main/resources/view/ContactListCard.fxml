<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.image.Image?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <Label fx:id="email" managed="false" visible="false" styleClass="cell_small_label" text="\$email" />

      <!-- Optional fields -->
      <!-- phone -->
      <Label fx:id="phone" managed="false" visible="false" styleClass="cell_small_label" text="\$phone" />

      <!-- address -->
      <Label fx:id="address" managed="false" visible="false" styleClass="cell_small_label" text="\$address" />

      <!-- telegram handle -->
      <Label fx:id="telegramHandle" managed="false" visible="false" styleClass="cell_small_label" text="\$telegramHandle" />

      <!-- zoom -->
      <Label fx:id="zoom" managed="false" visible="false" styleClass="cell_small_label" text="\$zoom" />

      <!-- links -->
      <HBox>
        <padding>
          <Insets top="2" bottom="2" />
        </padding>
        <Label fx:id="linksIcon" styleClass="cell_small_label" managed="false" visible="false" >
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <HBox>
          <padding>
            <Insets left="2" top="3" />
          </padding>
          <FlowPane fx:id="links" managed="false" />
        </HBox>
      </HBox>

      <!-- tags -->
      <HBox>
        <Label fx:id="tagIcon" managed="false" visible="false" />
        <HBox>
          <padding>
            <Insets left="2" top="3" />
          </padding>
          <FlowPane fx:id="tags" />
        </HBox>
      </HBox>
    </VBox>
  </GridPane>
</HBox>
